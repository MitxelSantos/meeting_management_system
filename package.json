{
  "name": "meeting-management-system",
  "version": "1.0.0",
  "description": "Sistema de Gestión de Reuniones - Secretaría de Salud del Tolima",
  "main": "public/index.html",
  "scripts": {
    "start": "node scripts/dev-server.js",
    "dev": "live-server public --port=3000 --open=/",
    "build": "node scripts/build.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ public/js/ --ext .js",
    "lint:fix": "eslint src/ public/js/ --ext .js --fix",
    "format": "prettier --write \"src/**/*.js\" \"public/**/*.js\"",
    "deploy": "node scripts/deploy.js"
  },
  "keywords": [
    "meetings",
    "management",
    "government",
    "colombia",
    "tolima",
    "health"
  ],
  "author": "Secretaría de Salud del Tolima",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "jest": "^29.7.0",
    "live-server": "^1.2.2",
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-jest": "^29.7.0"
  },
  "dependencies": {
    "chart.js": "^4.4.1",
    "date-fns": "^3.3.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.js",
      "public/js/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  },
  "babel": {
    "presets": ["@babel/preset-env"]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "extends": ["eslint:recommended"],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}